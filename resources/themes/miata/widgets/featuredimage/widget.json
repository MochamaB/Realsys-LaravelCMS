{
  "name": "Featured Image Widget",
  "slug": "featuredimage",
  "description": "Displays a featured image with optional title, caption and link",
  "icon": "ri-image-line",
  "fields": [
    {
      "name": "Image",
      "slug": "image",
      "field_type": "image",
      "default": "/themes/miata/img/bg-img/bg10.jpg",
      "placeholder": "Upload featured image...",
      "is_required": true,
      "position": 1,
      "description": "The main featured image"
    },
    {
      "name": "Title",
      "slug": "title",
      "field_type": "text",
      "default": "Page Title",
      "placeholder": "Enter title...",
      "is_required": false,
      "position": 2,
      "description": "Optional title above the image"
    },
    {
      "name": "Caption",
      "slug": "caption",
      "field_type": "text",
      "default": "Page Caption",
      "placeholder": "Enter caption...",
      "is_required": false,
      "position": 3,
      "description": "Optional caption text below the image"
    },
    {
      "name": "Link URL",
      "slug": "link_url",
      "field_type": "url",
      "default": "#",
      "placeholder": "Enter link URL...",
      "is_required": false,
      "position": 4,
      "description": "Optional URL for the image to link to"
    }
  ],
  "settings": [
    {
      "name": "Display Style",
      "slug": "display_style",
      "field_type": "select",
      "is_required": false,
      "description": "How to display the featured image",
      "options": [
        {"value": "default", "label": "Default"},
        {"value": "rounded", "label": "Rounded Corners"},
        {"value": "circle", "label": "Circle"},
        {"value": "polaroid", "label": "Polaroid Style"}
      ]
    },
    {
      "name": "Image Size",
      "slug": "image_size",
      "field_type": "select",
      "is_required": false,
      "description": "Size of the featured image",
      "options": [
        {"value": "small", "label": "Small"},
        {"value": "medium", "label": "Medium"},
        {"value": "large", "label": "Large"},
        {"value": "full", "label": "Full Width"}
      ]
    }
  ]
}
