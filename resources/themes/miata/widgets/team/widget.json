{
  "name": "Team Members Widget",
  "slug": "team",
  "description": "Display team members with images, titles and social links",
  "icon": "fa fa-users",
  "fields": [
    {
      "name": "Section Title",
      "slug": "section_title",
      "field_type": "text",
      "default": "Team Members",
      "placeholder": "Enter section title...",
      "is_required": false,
      "description": "Optional title for the team section"
    },
    {
      "name": "Section Description",
      "slug": "section_description",
      "field_type": "textarea",
      "default": "This is the area where you can add the team section description. Edit this area to add your description.",
      "placeholder": "Enter section description...",
      "is_required": false,
      "description": "Optional description for the team section"
    },
    {
      "name": "Team Members",
      "slug": "team_members",
      "field_type": "repeater",
      "is_required": true,
      "description": "Team members to display",
      "settings": {
        "min_items": 3,
        "max_items": 12,
        "subfields": [
          {
            "name": "Photo",
            "slug": "photo",
            "field_type": "image",
            "default": "/themes/miata/img/banner/7.jpg",
            "placeholder": "Upload team member photo...",
            "is_required": true,
            "description": "Team member photo"
          },
          {
            "name": "Name",
            "slug": "name",
            "field_type": "text",
            "default": "John Doe",
            "placeholder": "Enter team member name...",
            "is_required": true,
            "description": "Team member name"
          },
          {
            "name": "Designation",
            "slug": "designation",
            "field_type": "text",
            "default": "Leader",
            "placeholder": "Enter team member designation...",
            "is_required": true,
            "description": "Team member job title or position"
          },
          {
            "name": "Bio",
            "slug": "bio",
            "field_type": "textarea",
            "default": "This is the area where you can add the team member biography. Edit this area to add your biography.",
            "placeholder": "Enter team member biography...",
            "is_required": false,
            "description": "Team member biography or description"
          },
          {
            "name": "Facebook URL",
            "slug": "facebook",
            "field_type": "url",
            "default": "#",
            "placeholder": "Enter team member Facebook URL...",
            "is_required": false,
            "description": "Team member Facebook profile URL"
          },
          {
            "name": "Twitter URL",
            "slug": "twitter",
            "field_type": "url",
            "default": "#",
            "placeholder": "Enter team member Twitter URL...",
            "is_required": false,
            "description": "Team member Twitter profile URL"
          },
          {
            "name": "LinkedIn URL",
            "slug": "linkedin",
            "field_type": "url",
            "default": "#",
            "placeholder": "Enter team member LinkedIn URL...",
            "is_required": false,
            "description": "Team member LinkedIn profile URL"
          },
          {
            "name": "Instagram URL",
            "slug": "instagram",
            "field_type": "url",
            "default": "#",
            "placeholder": "Enter team member Instagram URL...",
            "is_required": false,
            "description": "Team member Instagram profile URL"
          }
        ]
      }
    }
  ],
  "settings": {
    "section_padding": {
      "name": "Section Padding",
      "field_type": "select",
      "is_required": false,
      "description": "Padding size for the section",
      "options": [
        {"value": "ptb-30", "label": "Small"},
        {"value": "ptb-50", "label": "Medium"},
        {"value": "ptb-80", "label": "Large"},
        {"value": "ptb-100", "label": "Extra Large"}
      ],
      "default": "ptb-80"
    },
    "background_color": {
      "name": "Background Color",
      "field_type": "color",
      "is_required": false,
      "description": "Background color for the section",
      "default": "#ffffff"
    },
    "text_alignment": {
      "name": "Text Alignment",
      "field_type": "select",
      "is_required": false,
      "description": "Alignment of the team members",
      "options": [
        {"value": "text-left", "label": "Left"},
        {"value": "text-center", "label": "Center"},
        {"value": "text-right", "label": "Right"}
      ],
      "default": "text-center"
    },
    "members_per_row": {
      "name": "Members Per Row",
      "field_type": "select",
      "is_required": false,
      "description": "Number of team members to display per row",
      "options": [
        {"value": "1", "label": "1 Member"},
        {"value": "2", "label": "2 Members"},
        {"value": "3", "label": "3 Members"},
        {"value": "4", "label": "4 Members"}
      ],
      "default": "3"
    },
    "show_social": {
      "name": "Show Social Links",
      "field_type": "boolean",
      "is_required": false,
      "description": "Whether to display social media links for team members",
      "default": true
    }
  },

  "content_type_compatibility": {
    "team_members": {
      "compatible_with": ["team_member", "staff", "employee"],
      "field_mappings": {
        "name": ["name", "full_name", "title"],
        "designation": ["designation", "job_title", "role", "title", "position"],
        "bio": ["bio", "description", "about"],
        "photo": ["photo", "image", "avatar"],
        "facebook": ["facebook_url", "facebook"],
        "twitter": ["twitter_url", "twitter"],
        "linkedin": ["linkedin_url", "linkedin"],
        "instagram": ["instagram_url", "instagram"]
      }
    }
  }
}
