{
  "name": "Default Content Widget",
  "slug": "default",
  "description": "A simple widget for displaying default content with title, text and optional button",
  "icon": "ri-layout-line",
  "fields": [
    {
      "name": "Title",
      "slug": "title",
      "field_type": "text",
      "is_required": true,
      "description": "Widget main title"
    },
    {
      "name": "Content",
      "slug": "content",
      "field_type": "rich_text",
      "is_required": true,
      "description": "Main content text"
    },
    {
      "name": "Button Text",
      "slug": "button_text",
      "field_type": "text",
      "is_required": false,
      "description": "Optional button text"
    },
    {
      "name": "Button URL",
      "slug": "button_url",
      "field_type": "url",
      "is_required": false,
      "description": "URL for the button"
    },
    {
      "name": "Layout Style",
      "slug": "layout_style",
      "field_type": "select",
      "is_required": false,
      "description": "Widget layout style",
      "settings": {
        "options": [
          {"value": "default", "label": "Default"},
          {"value": "boxed", "label": "Boxed"},
          {"value": "full-width", "label": "Full Width"}
        ]
      }
    }
  ],
  "content_type_compatibility": {
    "compatible_with": ["*", "page", "post", "article", "product", "service", "project", "event", "news", "team_member", "testimonial", "faq", "gallery", "feature"],
    "field_mappings": {
      "title": ["title", "name", "heading", "subject", "label"],
      "content": ["content", "description", "body", "text", "long_description", "details", "excerpt"],
      "button_text": ["button_text", "cta_text", "action_text", "read_more"],
      "button_url": ["button_url", "link", "url", "read_more_url", "cta_link"]
    }
  }
}
