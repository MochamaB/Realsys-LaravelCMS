{
  "name": "Counter Statistics Widget",
  "slug": "counter",
  "description": "A counter widget to display animated statistics with icons",
  "icon": "ri-number-1",
  "fields": [
    {
      "name": "Counters",
      "slug": "counters",
      "field_type": "repeater",
      "position": 1,
      "is_required": true,
      "description": "Counters to display",
      "placeholder": "Add counter statistics to showcase your achievements",
      "settings": {
        "min_items": 3,
        "max_items": 12,
        "subfields": [
          {
            "name": "Icon",
            "slug": "icon",
            "field_type": "image",
            "is_required": true,
            "description": "Icon image for the counter",
            "default": "/themes/miata/img/icon-img/1.png",
            "placeholder": "Select an icon or upload an image..."
          },
          {
            "name": "Top Text",
            "slug": "top_text",
            "field_type": "text",
            "is_required": true,
            "description": "Top text for the counter",
            "default": "Achievement",
            "placeholder": "Enter counter label..."
          },
          {
            "name": "Counter Number",
            "slug": "counter_number",
            "field_type": "number",
            "is_required": true,
            "description": "Counter number",
            "default": 100,
            "placeholder": "Enter number to count to..."
          }
        ]
      }
    }
  ],
  "settings": {
    "count_suffix": {
      "name": "Count Suffix",
      "field_type": "text",
      "is_required": false,
      "description": "Optional suffix to display after the number (e.g., +, k, M)"
    },
    "background_color": {
      "name": "Background Color",
      "field_type": "color",
      "is_required": false,
      "description": "Background color for the counter section",
      "default": "#f6f6f6"
    },
    "padding": {
      "name": "Section Padding",
      "field_type": "select",
      "is_required": false,
      "description": "Padding size for the counter section",
      "options": [
        {"value": "ptb-30", "label": "Small"},
        {"value": "ptb-50", "label": "Medium"},
        {"value": "ptb-70", "label": "Large"},
        {"value": "ptb-100", "label": "Extra Large"}
      ],
      "default": "ptb-70"
    },
    "animation_speed": {
      "name": "Animation Speed",
      "field_type": "number",
      "is_required": false,
      "description": "Speed of the counter animation in milliseconds",
      "default": 2000
    },
    "layout_style": {
      "name": "Layout Style",
      "field_type": "select",
      "is_required": false,
      "description": "Layout style for counter items",
      "options": [
        {"value": "default", "label": "Default"},
        {"value": "centered", "label": "Centered"},
        {"value": "boxed", "label": "Boxed"}
      ],
      "default": "default"
    }
  }
}
