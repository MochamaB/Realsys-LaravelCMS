{
  "name": "Counter Statistics Widget",
  "slug": "counter",
  "description": "A counter widget to display animated statistics with icons",
  "icon": "ri-number-1",
  "fields": [
    {
      "name": "Icon",
      "slug": "icon",
      "field_type": "image",
      "is_required": true,
      "position": 1,
      "description": "Icon image for the counter"
    },
    {
      "name": "Top Text",
      "slug": "top_text",
      "field_type": "text",
      "is_required": true,
      "position": 2,
      "description": "Title text displayed above the counter"
    },
    {
      "name": "Counter Number",
      "slug": "counter_number",
      "field_type": "number",
      "is_required": true,
      "position": 3,
      "description": "The number to count up to"
    }
  ],
  "settings": [
    {
      "name": "Count Suffix",
      "slug": "count_suffix",
      "field_type": "text",
      "is_required": false,
      "description": "Optional suffix to display after the number (e.g., +, k, M)"
    },
    {
      "name": "Background Color",
      "slug": "background_color",
      "field_type": "color",
      "is_required": false,
      "description": "Background color for the counter section",
      "default": "#f6f6f6"
    },
    {
      "name": "Section Padding",
      "slug": "padding",
      "field_type": "select",
      "is_required": false,
      "description": "Padding size for the counter section",
      "options": [
        {"value": "ptb-30", "label": "Small"},
        {"value": "ptb-50", "label": "Medium"},
        {"value": "ptb-70", "label": "Large"},
        {"value": "ptb-100", "label": "Extra Large"}
      ],
      "default": "ptb-70"
    },
    {
      "name": "Animation Speed",
      "slug": "animation_speed",
      "field_type": "number",
      "is_required": false,
      "description": "Speed of the counter animation in milliseconds",
      "default": 2000
    },
    {
      "name": "Layout Style",
      "slug": "layout_style",
      "field_type": "select",
      "is_required": false,
      "description": "Layout style for counter items",
      "options": [
        {"value": "default", "label": "Default"},
        {"value": "centered", "label": "Centered"},
        {"value": "boxed", "label": "Boxed"}
      ],
      "default": "default"
    }
  ]
}
