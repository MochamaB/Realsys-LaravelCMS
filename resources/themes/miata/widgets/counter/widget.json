{
  "name": "Counter Statistics Widget",
  "slug": "counter",
  "description": "A counter widget to display animated statistics with icons",
  "icon": "ri-number-1",
  "settings": {
    "background_color": {
      "name": "Background Color",
      "field_type": "color",
      "is_required": false,
      "description": "Background color for the counter section",
      "default": "#f6f6f6"
    },
    "padding": {
      "name": "Section Padding",
      "field_type": "select",
      "is_required": false,
      "description": "Padding size for the counter section",
      "options": [
        {"value": "ptb-30", "label": "Small"},
        {"value": "ptb-50", "label": "Medium"},
        {"value": "ptb-70", "label": "Large"},
        {"value": "ptb-100", "label": "Extra Large"}
      ],
      "default": "ptb-70"
    },
    "animation_speed": {
      "name": "Animation Speed",
      "field_type": "number",
      "is_required": false,
      "description": "Speed of the counter animation in milliseconds",
      "default": 2000
    },
    "layout_style": {
      "name": "Layout Style",
      "field_type": "select",
      "is_required": false,
      "description": "Layout style for counter items",
      "options": [
        {"value": "default", "label": "Default"},
        {"value": "centered", "label": "Centered"},
        {"value": "boxed", "label": "Boxed"}
      ],
      "default": "default"
    }
  },
  "fields": [
    {
      "name": "Title",
      "slug": "title",
      "field_type": "text",
      "is_required": true,
      "description": "Section title"
    },
    {
      "name": "Counter Items",
      "slug": "counter_items",
      "field_type": "repeater",
      "is_required": true,
      "description": "Statistics counters to display",
      "settings": {
        "min_items": 1,
        "max_items": 6,
        "subfields": [
          {
            "name": "Icon",
            "slug": "icon",
            "field_type": "image",
            "is_required": true,
            "description": "Icon image for the counter"
          },
          {
            "name": "Title",
            "slug": "title",
            "field_type": "text",
            "is_required": true,
            "description": "Title for the counter"
          },
          {
            "name": "Count Value",
            "slug": "count_value",
            "field_type": "number",
            "is_required": true,
            "description": "The number to count up to"
          },
          {
            "name": "Count Suffix",
            "slug": "count_suffix",
            "field_type": "text",
            "is_required": false,
            "description": "Optional suffix to display after the number (e.g., +, k, M)"
          }
        ]
      }
    },
    {
      "name": "Layout Style",
      "slug": "layout_style",
      "field_type": "select",
      "is_required": false,
      "description": "Layout style for counter items",
      "settings": {
        "options": [
          {"value": "default", "label": "Default"},
          {"value": "centered", "label": "Centered"},
          {"value": "boxed", "label": "Boxed"}
        ]
      },
      "default": "default"
    }
  ]
}
