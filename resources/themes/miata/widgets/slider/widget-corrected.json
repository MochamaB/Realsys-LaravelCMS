{
  "name": "Image Slider Widget",
  "slug": "slider",
  "description": "A responsive image carousel/slider with navigation controls and captions based on Nivo Slider",
  "icon": "fa fa-image",
  "fields": [
    {
      "name": "Slides",
      "slug": "slides",
      "field_type": "repeater",
      "position": 1,
      "is_required": true,
      "description": "Slide items for the slider",
      "settings": {
        "min_items": 1,
        "max_items": 10,
        "subfields": [
          {
            "name": "Image",
            "slug": "image",
            "field_type": "image",
            "is_required": true,
            "description": "Slide background image"
          },
          {
            "name": "Layer 1 Title",
            "slug": "layer1_title",
            "field_type": "text",
            "is_required": false,
            "description": "Top small title (e.g., 'HEY! WE ARE miata')"
          },
          {
            "name": "Layer 2 Title Line 1",
            "slug": "layer2_line1",
            "field_type": "text",
            "is_required": false,
            "description": "Main title first line (e.g., 'HONESTY IDEOLOGY TO')"
          },
          {
            "name": "Layer 2 Title Line 2",
            "slug": "layer2_line2",
            "field_type": "text",
            "is_required": false,
            "description": "Main title second line (e.g., 'THE PEOPLE')"
          },
          {
            "name": "Button Text",
            "slug": "button_text",
            "field_type": "text",
            "is_required": false,
            "description": "Button text (e.g., 'Read more')"
          },
          {
            "name": "Button URL",
            "slug": "button_url",
            "field_type": "url",
            "is_required": false,
            "description": "URL for the button link"
          }
        ]
      }
    }
  ],
  "settings": {
    "animation_speed": {
      "name": "Animation Speed",
      "field_type": "number",
      "is_required": false,
      "description": "Animation speed in milliseconds",
      "default": 500
    },
    "autoplay": {
      "name": "Autoplay",
      "field_type": "checkbox",
      "is_required": false,
      "description": "Auto-rotate slides",
      "default": true
    },
    "autoplay_delay": {
      "name": "Autoplay Delay",
      "field_type": "number",
      "is_required": false,
      "description": "Delay between slides in milliseconds",
      "default": 5000
    },
    "show_nav_arrows": {
      "name": "Show Navigation Arrows",
      "field_type": "checkbox",
      "is_required": false,
      "description": "Show next/prev navigation arrows",
      "default": true
    },
    "show_pagination": {
      "name": "Show Pagination Dots",
      "field_type": "checkbox",
      "is_required": false,
      "description": "Show pagination dots",
      "default": true
    }
  },
  "content_type_compatibility": {
    "slides": {
      "compatible_with": ["slider", "banner", "carousel", "gallery", "hero"],
      "field_mappings": {
        "image": ["image", "featured_image", "photo", "thumbnail", "banner_image"],
        "layer1_title": ["subtitle", "tagline", "small_title"],
        "layer2_line1": ["title", "name", "heading", "banner_title"],
        "layer2_line2": ["subtitle", "description", "banner_subtitle"],
        "button_text": ["button_text", "cta_text", "action_text"],
        "button_url": ["button_url", "link", "url", "cta_link", "action_link"]
      }
    }
  }
}