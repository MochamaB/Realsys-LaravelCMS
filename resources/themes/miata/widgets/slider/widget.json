{
  "name": "Image Slider Widget",
  "slug": "slider",
  "description": "A responsive image carousel/slider with navigation controls and optional captions",
  "icon": "fa fa-image",
  "fields": [
    {
      "name": "Main Image",
      "slug": "main_image",
      "field_type": "image",
      "position": 1,
      "is_required": true,
      "description": "The main image displayed in the slider"
    },
    {
      "name": "Slides",
      "slug": "slides",
      "field_type": "repeater",
      "position": 2,
      "is_required": true,
      "description": "Slide items for the slider",
      "settings": {
        "min_items": 1,
        "max_items": 10,
        "subfields": [
        {
          "name": "Image",
          "slug": "image",
          "field_type": "image",
          "is_required": true,
          "description": "Slide image"
        },
        {
          "name": "Title Line 1",
          "slug": "title_line1",
          "field_type": "text",
          "is_required": false,
          "description": "First line of title (Layer 1)"
        },
        {
          "name": "Title Line 2",
          "slug": "title_line2",
          "field_type": "text",
          "is_required": false,
          "description": "Second line of title (Layer 2)"
        },
        {
          "name": "Title Line 3",
          "slug": "title_line3",
          "field_type": "text",
          "is_required": false,
          "description": "Third line of title (Layer 2)"
        },
        {
          "name": "Button Text",
          "slug": "button_text",
          "field_type": "text",
          "is_required": false,
          "description": "Optional button text (Layer 3)"
        },
        {
          "name": "Button URL",
          "slug": "button_url",
          "field_type": "url",
          "is_required": false,
          "description": "URL for the button"
        }
      ]
      }
    }
  ],
  "settings": {
    "animation_speed": {
      "name": "Animation Speed",
      "field_type": "number",
      "is_required": false,
      "description": "Animation speed in milliseconds",
      "default": 500
    },
    "autoplay": {
      "name": "Autoplay",
      "field_type": "checkbox",
      "is_required": false,
      "description": "Auto-rotate slides",
      "default": true
    },
    "autoplay_delay": {
      "name": "Autoplay Delay",
      "field_type": "number",
      "is_required": false,
      "description": "Delay between slides in milliseconds",
      "default": 5000
    },
    "show_nav_arrows": {
      "name": "Show Navigation Arrows",
      "field_type": "checkbox",
      "is_required": false,
      "description": "Show next/prev navigation arrows",
      "default": true
    },
    "show_pagination": {
      "name": "Show Pagination Dots",
      "field_type": "checkbox",
      "is_required": false,
      "description": "Show pagination dots",
      "default": true
    }
  },
  "content_type_compatibility": {
    "slides": {
      "compatible_with": ["slider", "banner", "carousel", "gallery", "hero"],
      "field_mappings": {
        "image": ["image", "featured_image", "photo", "thumbnail", "banner_image"],
        "title_line1": ["title", "name", "heading", "banner_title"],
        "title_line2": ["subtitle", "excerpt", "summary", "description"],
        "title_line3": ["caption", "description", "banner_subtitle"],
        "button_text": ["button_text", "cta_text", "action_text"],
        "button_url": ["button_url", "link", "url", "cta_link", "action_link"]
      }
    }
  }
}
